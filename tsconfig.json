{
  "compilerOptions": {
    "newLine": "lf",
    "outDir": "./vendor",
    "allowJs": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "incremental": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "noEmit": false,
    "noEmitOnError": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "target": "es6",
    "lib": [
      "es2017",
      "dom"
    ],
    "types": [
      "node"
    ]
  },
  "include": [
    "src/**/*"
  ]
}
